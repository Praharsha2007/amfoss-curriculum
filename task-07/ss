#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/wait.h>
 
#define MAX_INPUT_SIZE 1024
#define MAX_ARGS 64
 
int main() {
    char input[MAX_INPUT_SIZE];
 
    while (1) {
        // Display prompt
        printf("$ ");
        fflush(stdout);
 
        // Read input
        if (fgets(input, MAX_INPUT_SIZE, stdin) == NULL) {
            printf("\nExiting shell...\n");
            break;
        }
 
        // Remove trailing newline
        input[strcspn(input, "\n")] = '\0';
 
        // Parse input into arguments
        char *argv[MAX_ARGS];
        int argc = 0;
        char *token = strtok(input, " \n");
        while (token != NULL && argc < MAX_ARGS - 1) {
            argv[argc++] = token;
            token = strtok(NULL, " \n");
        }
        argv[argc] = NULL;
 
        // Skip empty input
        if (argc == 0) continue;
 
        // Handle exit command
        if (strcmp(argv[0], "exit") == 0) {
            printf("Exiting shell...\n");
            break;
        }
 
        // Fork child process
        pid_t pid = fork();
        if (pid == -1) {
            perror("fork");
            continue;
        }
 
        if (pid == 0) {  // Child process
            if (execvp(argv[0], argv) == -1) {
                perror("execvp");
                exit(EXIT_FAILURE);
            }
        } else {  // Parent process
            int status;
            waitpid(pid, &status, 0);
        }
    }
 
    return 0;
}